{% import "AdminBundle:Functions:forms.html.twig" as forms %}

{% extends 'AdminBundle::layout.html.twig' %}

{% block pageContainer %}
				<!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            <i class="fa fa-group"></i> Clientes <small>Gestor de Clientes</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <a href="{{ path('admin_clientes_homepage') }}"><i class="fa fa-group"></i> Clientes</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-group"></i> Nuevo
                            </li>
                        </ol>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Agregar un Cliente
                                    </div><!-- / .panel-heading -->
                                    <div class="panel-body">
                                        <form class="form-horizontal" role="form" action="" method="post">
                                          {{ forms.input('nombre', '*Nombre', '', 'text', ' required') }}
                                          {{ forms.input('apellido', '*Apellido', '', 'text', ' required') }}

                                          <div class="form-group">
                                            <label for="dniNumero" class="col-sm-2 control-label">Documento</label>
                                            <div class="col-sm-5">
                                              <input type="text" class="form-control" id="dniNumero" name="dniNumero" placeholder="NÃºmero de Documento" value="" required />
                                            </div>
                                            <label for="dniTipo" class="col-sm-1 control-label">Tipo</label>
                                            <div class="col-sm-4">
                                              <select class="form-control" id="dniTipo" name="dniTipo" placeholder="Tipo de Documento">
                                                <option value="dni" selected>DNI</option>
                                                <option value="le">CI</option>
                                                <option value="le">LE</option>
                                                <option value="le">LC</option>
                                              </select>
                                            </div>
                                          </div>
                                          <div class="form-group">
                                            <label for="sexo" class="col-sm-2 control-label">Sexo</label>
                                            <div class="col-sm-10">
                                              <select class="form-control" id="sexo" name="sexo" placeholder="Sexo">
                                                <option value="masc">Masculino</option>
                                                <option value="fem" selected>Femenino</option>
                                              </select>
                                            </div>
                                          </div>

                                          {{ forms.input('telefono') }}
                                          {{ forms.input('mail','E-Mail', '', 'email', ' required') }}

                                          <div class="form-group">
                                            <label for="imagen" class="col-sm-2 control-label">Foto</label>
                                            <div class="col-sm-10">
                                              <input type="file" class="form-control" id="imagen" name="imagen" placeholder="Foto del Cliente" accept="image/*">
                                            </div>
                                          </div>
                                          <div class="form-group">
                                            <label for="notas" class="col-sm-2 control-label">Notas</label>
                                            <div class="col-sm-10">
                                              <textarea class="form-control" id="notas" name="notas" rows="10"></textarea>
                                            </div>
                                          </div>

                                          <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10">
                                              <button type="submit" class="btn btn-primary">Continuar</button>
                                            </div>
                                          </div>
                                        </form>
                                    </div><!-- / .panel-body -->
                                </div><!-- / .panel -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
{% endblock %}