{% macro input (name, text, value, type, classes) %}
<div class="form-group">
    <label for="{{ name }}" class="col-md-2 control-label">{{ text }}</label>
    <div class="col-md-10"><input class="form-control {{ classes|default('') }}" type="{{ type|default('text') }}" name="{{ name }}" placeholder="{{ text }}" value="{{ value }}"></div>
</div>
{% endmacro %}