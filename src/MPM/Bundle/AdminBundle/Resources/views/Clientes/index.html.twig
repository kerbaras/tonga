{% extends 'AdminBundle::layout.html.twig' %}

{% block pageContainer %}
				<!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            <i class="fa fa-group"></i>  Clientes <small>Gestor de Clientes</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-group"></i> Clientes
                            </li>
                        </ol>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Clientes

                                        <div class="pull-right">
                                            <div class="btn-group">
                                                <a href="{{ path('admin_clientes_newpage') }}" class="btn btn-default btn-xs"><i class="fa fa-plus"></i> Agregar Cliente</a>
                                            </div>
                                        </div>
                                    </div><!-- / .panel-heading -->
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table id="tableClientes" class="table table-striped table-bordered table-hover datatable">
                                                <thead>
                                                    <tr>
                                                        <th>Apellido</th>
                                                        <th>Nombre</th>
                                                        <th>DNI</th>
                                                        <th>Telefono</th>
                                                        <th>Tarifa</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                {% for cliente in clientes %}
                                                    <tr valign="middle">
                                                        <td>{{ cliente.apellido }}</td>
                                                        <td>{{ cliente.nombre }}</td>
                                                        <td>{{ cliente.dni }}</td>
                                                        <td>{{ cliente.telefono }}</td>
                                                        <td></td>
                                                        <td align="center">
                                                            <a href="{{ path('admin_clientes_show', { 'id': cliente.id }) }}" class="btn btn-info btn-circle"><i class="fa fa-search"></i></a>
                                                            <a href="{{ path('admin_clientes_editpage', { 'id': cliente.id }) }}" class="btn btn-warning btn-circle"><i class="fa fa-edit"></i></a>
                                                            <a href="javascript:eliminar('{{ path('admin_clientes_delete', {'id': cliente.id }) }}');" class="btn btn-danger btn-circle"><i class="fa fa-trash"></i></a>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr class="warning">
                                                        <td colspan="6"><strong>No se encontraron Clientes</strong></td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div><!-- / .panel-body -->
                                </div><!-- / .panel -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
                
                <!-- Modal Eliminar -->
                <div class="modal fade" id="eliminarModal" tabindex="-1" role="dialog" aria-labelledby="eliminarModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
                        <h4 class="modal-title" id="eliminarModalLabel">Eliminar Cliente</h4>
                      </div>
                      <div class="modal-body">
                        <p>Â¿Esta seguro que desea eliminar el cliente?</p>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <a href="" class="btn btn-danger">Eliminar</a>
                      </div>
                    </div><!-- /.modal-content -->
                  </div><!-- /.modal-dialog -->
                </div><!-- /.modal Eliminar -->

{% endblock %}

{% block stylesheets %}
    <!-- DataTables CSS -->
    {% stylesheets 'bundles/admin/css/plugins/dataTables.bootstrap.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    <!-- DataTables JavaScript -->
    {% javascripts
        '@AdminBundle/Resources/public/js/plugins/dataTables/jquery.dataTables.js'
        '@AdminBundle/Resources/public/js/plugins/dataTables/dataTables.bootstrap.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $('.datatable').dataTable();
    
        function eliminar(url){
            $('#eliminarModal .modal-dialog .modal-content .modal-footer a.btn-danger').attr("href", url)
            $('#eliminarModal').modal()
        }
    </script>
    
{% endblock %}